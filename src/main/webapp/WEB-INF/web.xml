<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring.xml</param-value>
	</context-param>
	<filter>
		<filter-name>encoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>cxfws</servlet-name>
		<servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>cxfws</servlet-name>
		<url-pattern>/wscxf/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>endoingtTest</servlet-name>
		<servlet-class>cn.ws.servlet.TestEncodingServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>endoingtTest</servlet-name>
		<url-pattern>/endoingtTest</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>servlet_upload</servlet-name>
		<servlet-class>cn.ws.servlet.WsFileUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>servlet_upload</servlet-name>
		<url-pattern>/servlet_upload</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.apache.commons.fileupload.servlet.FileCleanerCleanup</listener-class>
	</listener>
	<welcome-file-list>
		<welcome-file>
			index.jsp
		</welcome-file>
	</welcome-file-list>
</web-app>